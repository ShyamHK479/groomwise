<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net6.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
        <ApplicationIcon>Views\Resources\Icons\groomwise-icon-multi.ico</ApplicationIcon>
        <AssemblyName>GroomWise</AssemblyName>
        <RootNamespace>GroomWise</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.0" />
        <PackageReference Include="Material.Icons.WPF" Version="1.2.0" />
        <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
        <PackageReference Include="Russkyc.Abstractions" Version="1.0.5" />
        <PackageReference Include="Russkyc.DependencyInjection" Version="0.9.3" />
        <PackageReference Include="Russkyc.ModernControls.WPF" Version="1.6.1" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Services\Cache\" />
      <Folder Include="Views\Resources\Icons\" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Views\Resources\Icons\groomwise-icon-multi.ico" />
      <Resource Include="Views\Resources\Icons\groomwise-icon-multi.ico" />
    </ItemGroup>

</Project>

<UserControl x:Class="GroomWise.Views.Pages.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:app="clr-namespace:GroomWise.ViewModels.App"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:templates="clr-namespace:GroomWise.Views.Templates"
             d:DataContext="{d:DesignInstance app:SettingsViewModel,
                                              IsDesignTimeCreatable=True}"
             d:DesignHeight="720"
             d:DesignWidth="1280"
             Style="{StaticResource FadeInFromBottomAnimation}"
             mc:Ignorable="d">
    <Grid Width="700"
          Margin="20"
          Style="{StaticResource FadeInFromBottomAnimation}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Margin="0,0,0,12"
              HorizontalAlignment="Stretch">
            <TextBlock VerticalAlignment="Center"
                       FontSize="16"
                       Text="Settings" />
        </Grid>
        <ScrollViewer Grid.Row="1">
            <templates:SettingsTemplate />
        </ScrollViewer>
    </Grid>
</UserControl>
